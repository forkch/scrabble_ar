            android:layout_height="wrap_content"
            android:id="@+id/textViewPlayer4"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:inputType="textCapCharacters"
            android:id="@+id/editTextPlayer4" />

