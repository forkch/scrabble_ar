<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@android:color/darker_gray"
    tools:context="ch.zuehlke.arscrabble.jmonkey.JMonkeyActivity">

    <Button
        android:text="Spielzug abschliessen"
        android:layout_width="wrap_content"
        android:id="@+id/finishRoundButton"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewPlayerName"
        android:text="Stefan"
        android:layout_toRightOf="@id/finishRoundButton"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewPlayerStones"
        android:text="A,B,C,D"
        android:layout_toRightOf="@id/finishRoundButton"
        android:textColor="@android:color/black"
        android:layout_below="@id/textViewPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewNotEnough"
        android:text="Spieler hat zu wenig Steine, neue hinzufÃ¼gen:"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@id/finishRoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Save"
        android:layout_below="@id/textViewNotEnough"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:id="@+id/setNewStones"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNewStones"
        android:layout_below="@id/textViewNotEnough"
        android:layout_toLeftOf="@id/setNewStones"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
